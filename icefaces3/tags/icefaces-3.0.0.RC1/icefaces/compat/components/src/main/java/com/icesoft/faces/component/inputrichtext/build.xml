<project name="icefaces-comps-compat-inputrichtext" default="resource-list">
    <property name="resources.dir" value="${basedir}/src/main/resources/META-INF/resources/"/>

    <target name="clean-inputrichtext-resources">
		    <delete file="${resources.dir}/inputrichtext/ckeditor.resources" />
    </target>

    <target name="resource-list">
        <pathconvert property="codebase" pathsep=" " dirsep="/">
            <map from="${resources.dir}" to=""/>
            <fileset dir="${resources.dir}/inputrichtext/ckeditor/" includes="**/*"/>
        </pathconvert>
        <echo message="${codebase}" file="${resources.dir}/inputrichtext/ckeditor.resources"/>
    </target>
</project>

