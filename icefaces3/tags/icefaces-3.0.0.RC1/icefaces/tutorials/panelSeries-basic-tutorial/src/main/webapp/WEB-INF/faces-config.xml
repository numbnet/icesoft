<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
    </application>

    <!-- Basic Series Panel example bean-->
    <managed-bean>
        <description>
            Backing bean for series panel example.
        </description>
        <managed-bean-name>basicPanelSeriesBean</managed-bean-name>
        <managed-bean-class>
            com.icesoft.icefaces.tutorial.component.panelSeries.basic.BasicPanelSeriesBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

</faces-config>