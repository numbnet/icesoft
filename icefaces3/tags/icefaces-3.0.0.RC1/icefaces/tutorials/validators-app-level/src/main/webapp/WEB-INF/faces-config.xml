<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
    </application>
    
   
    
    <managed-bean>
        <description>
            Backing bean for validator example.
        </description>
        <managed-bean-name>user</managed-bean-name>
        <managed-bean-class>
            com.icesoft.icefaces.tutorial.components.validators.standard.User
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean> 
    
    <validator>
        <validator-id>phoneNumberValidator</validator-id>
        <validator-class>com.icesoft.icefaces.tutorial.components.validators.custom.PhoneNumberValidator</validator-class>
    </validator>
  
</faces-config>
