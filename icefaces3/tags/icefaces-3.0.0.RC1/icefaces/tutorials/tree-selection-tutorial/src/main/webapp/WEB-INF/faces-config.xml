<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
    </application>

    <!-- Basic Tree example bean-->
    <managed-bean>
        <description>
            Backing bean for tree example.
        </description>
        <managed-bean-name>tree</managed-bean-name>
        <managed-bean-class>
            com.icesoft.icefaces.tutorial.component.tree.selection.TreeBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <!--
        PanelStack is responsible for setting the selecte panel in the
        panelStack component
    -->
    <managed-bean>
        <description>
            Backing bean for tree example.
        </description>
        <managed-bean-name>panelStack</managed-bean-name>
        <managed-bean-class>
            com.icesoft.icefaces.tutorial.component.tree.selection.PanelStackBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

</faces-config>