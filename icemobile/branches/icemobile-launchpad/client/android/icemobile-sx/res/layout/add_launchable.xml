<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	       android:orientation="vertical"
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent">
  <EditText
      android:id="@+id/app_name"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/app_name_hint"
      android:inputType="text" />
  <EditText
      android:id="@+id/app_url"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/app_url_hint"
      android:inputType="textUri" />
  <EditText
      android:id="@+id/sx_suffix"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/sx_suffix_hint"
      android:inputType="textUri" />
  <EditText
      android:id="@+id/app_splash"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/app_splash_hint"
      android:inputType="textUri" />
  <EditText
      android:id="@+id/app_icon"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/app_icon_hint"
      android:inputType="textUri" />
  <LinearLayout  android:orientation="horizontal"
		 android:layout_width="fill_parent"
		 android:layout_height="fill_parent">
    <Button
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:text="@string/add"
	android:onClick="addLaunchable" />
    <Button
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:text="@string/cancel"
	android:onClick="cancelLaunchable" />
  </LinearLayout>
</LinearLayout>
