<project name="sparkle-comps" default="dist" basedir=".">
    <description>
        Component build file
    </description>
  <property file="build.properties"/>    
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>
  <property name="conf"  location="conf"/>
  <property name="bin"  location="bin/"/>

  <path id="compile.run.classpath">
  	    <fileset dir="${icefaces.lib.dir}" includes="*.jar"/>
  </path>
    

  <target name="compile" 
        description="compile the source " >
    <echo message=".."/>        
    <mkdir dir="${build}/exploded"/>
    
    <javac srcdir="${src}" destdir="${build}/exploded" debug="true">
    	<classpath refid="compile.run.classpath"/>
    </javac>  
    
    
  </target>

  <target name="dist" depends="compile" 
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/${ant.project.name}.jar" basedir="${build}"/>
  </target>

  <target name="clean"
        description="clean up" >

  	<!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>

  </target>
</project>
