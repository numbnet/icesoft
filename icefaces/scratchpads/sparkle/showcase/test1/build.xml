<project name="advcomps-showcase" default="war">

    <property name="classes.dir" value="src/main/webapp/WEB-INF/classes"/>
    <property name="icefaces2.lib.dir" location="../../../glimmer/lib"/>

    <target name="clean">
        <delete dir="dist"/>
        <delete dir="${classes.dir}"/>
    </target>

    <target name="compile" depends="clean">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="src" destdir="${classes.dir}">
            <classpath>
                <fileset dir="${icefaces2.lib.dir}">
                    <include name="jsf-api.jar"/>
                    <include name="el-api-2.2.1-b03.jar"/>
                </fileset>
                <fileset dir="../../../sparkle/component/dist">
                    <include name="sparkle-comps.jar"/>
                </fileset>
            </classpath>
        </javac>
        <copy todir="${classes.dir}">
            <fileset dir="src/main/resources" />
        </copy>
    </target>

    <target name="war" depends="compile">
        <mkdir dir="dist"/>
        <war basedir="src/main/webapp" destfile="dist/${ant.project.name}.war">
            <lib dir="${icefaces2.lib.dir}">
                <include name="icefaces.jar"/>
                <include name="jsf-api.jar"/>
                <include name="jsf-impl.jar"/>
                <include name="icepush.jar"/>
            </lib>
            <lib file="../../component/dist/sparkle-comps.jar"/>
        </war>
    </target>

</project>
        