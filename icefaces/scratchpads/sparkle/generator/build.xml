<project name="annotated-comps" default="dist" basedir=".">
    <description>
        simple example build file
    </description>
    <property file="build.properties"/>    
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="component" location="../component"/>	
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>
  <property name="conf"  location="conf"/>
  <property name="bin"  location="bin/"/>

  <path id="compile.run.classpath">
  	    <fileset dir="${icefaces.lib.dir}" includes="*.jar"/>
      	<pathelement path="../component/build/exploded"/>
  </path>
    
  <target name="init" depends="compile">
    <echo message="Running generator"/>
    <!-- Create the time stamp -->
    <tstamp/>
    <java classname="org.icefaces.generator.Generator"  classpathref="compile.run.classpath" fork="true"
    	classpath="${build}">
    </java>

    <echo message="Compile generated files"/>
   <javac srcdir="${component}/build/generated" destdir="${component}/build/exploded" debug="true" >
       <classpath refid="compile.run.classpath"/>
   </javac>
       	
  </target>

  <target name="compile" depends="prepare"
        description="compile the source " >
    <mkdir dir="${build}"/>

    <echo message="Compiling annotation package"/>
    <!-- First compile the annotation -->
   <javac srcdir="${component}/src" destdir="${build}" debug="true" includes="org/icefaces/component/annotation/**, **/*Meta.java">
       <classpath refid="compile.run.classpath"/>
   </javac>   
  
    <echo message="Compiling generator code"/>
   <!-- compile generator code -->
   <javac srcdir="${src}" destdir="${build}" debug="true">
   <classpath refid="compile.run.classpath"/>
   </javac> 
 
    
  </target>
	
  <target name="prepare"    >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>
    <mkdir dir="${component}/build/exploded"/>
  </target>
	
  <target name="dist" depends="init" 
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>
    <mkdir dir="${component}/build/exploded"/>
    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/${ant.project.name}.jar" basedir="${build}"/>
  </target>

  <target name="clean"
        description="clean up" >

    
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>

  </target>
</project>
