<project name="icefaces-compat" default="install" xmlns:artifact="antlib:org.apache.maven.artifact.ant">
	
    <property file="../../core/build.properties"/>
    <property name="lib.dir" location="../lib"/>
    <property name="core.lib.dir" location="../../lib"/>
    
	<path id="maven-ant-tasks.classpath" path="${core.lib.dir}/maven-ant-tasks-2.1.10.jar" />
	  <typedef resource="org/apache/maven/artifact/ant/antlib.xml"
	           uri="antlib:org.apache.maven.artifact.ant"
	           classpathref="maven-ant-tasks.classpath" />

	<target name="install">
	      <artifact:localRepository id="local.repository" path="${local.repository}" layout="default" />
	      <artifact:pom id="compatPom" file="icefaces-compat.pom"> 
	     	 <localRepository refid="local.repository"/>
	      </artifact:pom>
	      	<echo> installing icefaces-compat-${compatPom.version} to local repository</echo>
	      <artifact:install file="${lib.dir}/icefaces-compat.jar" >
	      	 <localRepository refid="local.repository"/>      	
	         	  <pom refid="compatPom"/>
	      </artifact:install>	
	      <artifact:pom id="compatCompsPom" file="icefaces-comps-compat.pom"> 
	    	 <localRepository refid="local.repository"/>
	      </artifact:pom>
	       <echo>installing icefaces-${compatCompsPom.version} to local repository</echo>
	      <artifact:install file="${lib.dir}/icefaces-comps-compat.jar" >
	      	 <localRepository refid="local.repository"/>      	
	    	  <pom refid="compatCompsPom"/>
	      </artifact:install>
	      
	    </target>

</project>

