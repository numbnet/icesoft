<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <navigation-rule>
        <from-view-id>/window-scope-A.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>B</from-outcome>
            <to-view-id>/window-scope-B.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/window-scope-B.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>A</from-outcome>
            <to-view-id>/window-scope-A.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/view-scope-A.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>B</from-outcome>
            <to-view-id>/view-scope-B.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/view-scope-B.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>A</from-outcome>
            <to-view-id>/view-scope-A.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>