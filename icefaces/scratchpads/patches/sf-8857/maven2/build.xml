<project name="icefacesEE" default="lib" xmlns:artifact="antlib:org.apache.maven.artifact.ant">

    <property file="build.properties"/>
    <property name="lib.dir" location="../lib"/>
    <property name="finalNameGlimmer" value="${glimmer.artifactId}-${mvn.version}"/>

	 <path id="maven-ant-tasks.classpath" path="${lib.dir}/maven-ant-tasks-2.1.10.jar" />
	  <typedef resource="org/apache/maven/artifact/ant/antlib.xml"
	           uri="antlib:org.apache.maven.artifact.ant"
	           classpathref="maven-ant-tasks.classpath" />

  <target name="install-local" description="install jars from icefaces project into local repository">
    <artifact:localRepository id="local.repository" path="${local.repository}" layout="default" />
    	
    <artifact:pom id="icefacesPom" file="poms/icefaces.pom"> 
    	 <localRepository refid="local.repository"/>
    </artifact:pom>
    <artifact:pom id="icefacesCompsPom" file="poms/icefaces-comps.pom"> 
    	 <localRepository refid="local.repository"/>
    </artifact:pom>
    <artifact:pom id="icefacesFaceletsPom" file="poms/icefaces-facelets.pom"> 
    	 <localRepository refid="local.repository"/>
    </artifact:pom>
    <artifact:pom id="pushServerPom" file="poms/push-server.pom"> 
    	 <localRepository refid="local.repository"/>
    </artifact:pom>
    <artifact:pom id="justIcePom" file="poms/just-ice.pom"> 
    	 <localRepository refid="local.repository"/>
    </artifact:pom>

    	<echo> Installing icefaces-${icefacesPom.version} to local repository"</echo>
      <artifact:install file="${lib.dir}/icefaces.jar" >
      	 <localRepository refid="local.repository"/>      	
    	  <pom refid="icefacesPom"/>
      </artifact:install>      
    	<echo> Installing icefaces-${icefacesCompsPom.version} to local repository"</echo>
      <artifact:install file="${lib.dir}/icefaces-comps.jar" >
      	 <localRepository refid="local.repository"/>      	
    	  <pom refid="icefacesCompsPom"/>
      </artifact:install> 
    	<echo> Installing icefaces-${icefacesFaceletsPom.version} to local repository"</echo>
      <artifact:install file="${lib.dir}/icefaces-facelets.jar" >
      	 <localRepository refid="local.repository"/>      	
    	  <pom refid="icefacesFaceletsPom"/>
      </artifact:install> 
    	<echo> Installing push-server-${pushServerPom.version} to local repository"</echo>
      <artifact:install file="../push-server/push-server.war" >
      	 <localRepository refid="local.repository"/>      	
    	  <pom refid="pushServerPom"/>
      </artifact:install> 
    	<echo> Installing just-ice${justIcePom.version} to local repository"</echo>
      <artifact:install file="${lib.dir}/just-ice.jar" >
      	 <localRepository refid="local.repository"/>      	
    	  <pom refid="justIcePom"/>
      </artifact:install>                
    </target>

    <target name="install-composites" description="install icefaces-composite-comps.jar to local repository">
       <artifact:localRepository id="local.repository" path="${local.repository}" layout="default" />
    	
       <artifact:pom id="compositePom" file="poms/icefaces-composite-comps.pom"> 
    	    <localRepository refid="local.repository"/>
       </artifact:pom>
    	<echo> Installing icefaces-composite-comps-${icefacesCompsPom.version} to local repository"</echo>
      <artifact:install file="../../icepack/composite-components/dist/icefaces-composite-comps.jar" >
      	 <localRepository refid="local.repository"/>      	
    	  <pom refid="compositePom"/>
      </artifact:install> 

    </target>
   
    <target name="install-eps-jars" description="install the eps jars to be included in applications using eps">
     <artifact:localRepository id="local.repository" path="${local.repository}" layout="default" />
    	
       <artifact:pom id="epsJmsPom" file="poms/eps-jms.pom"> 
    	    <localRepository refid="local.repository"/>
       </artifact:pom>
      <artifact:pom id="icefacesClusterPom" file="poms/icefaces-cluster.pom"> 
    	    <localRepository refid="local.repository"/>
       </artifact:pom>

    	<echo> Installing eps-jms-${epsJmsPom.version} to local repository"</echo>
      <artifact:install file="../../icepack/eps/dist/eps-jms.jar" >
      	 <localRepository refid="local.repository"/>      	
    	  <pom refid="epsJmsPom"/>
      </artifact:install>
    	<echo> Installing icefaces-cluster-${icefacesClusterPom.version} to local repository"</echo>
      <artifact:install file="../../icepack/eps/dist/icefaces-cluster.jar" >
      	 <localRepository refid="local.repository"/>      	
    	  <pom refid="icefacesClusterPom"/>
      </artifact:install>

 
    </target>	


    <target name="get-maven">
      <get src="http://repo1.maven.org/maven2/org/apache/maven/maven-ant-tasks/2.0.10/maven-ant-tasks-2.0.10.jar" dest="${lib.dir}/maven-ant-tasks-2.1.10.jar"/>
    </target>
</project>

