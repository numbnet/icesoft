&ice-att-style-props;
&actionsource-props;
<property>
    <description>
        List of "," separated events (e.g) capture="click, keydown, ...".
    </description>
    <property-name>events</property-name>
    <property-class>java.lang.String</property-class>
    <property-extension>
        <category>ICE_LAYOUT</category>
        <editor-class>
            &stringEditor;
        </editor-class>
    </property-extension>
</property>

<property>
    <description>
     <![CDATA[
        Its an optional attribute. Its a function handlers 
        for the events defined in capture attribute(e.g) <br/>
        &lt;ice:jsEventListener capture="click" handler="myClickHandler"&gt;<br/><br/>
                

        &lt;ice:jsEventListener capture="click, keydown" handler="myHandler"&gt;<br/>

         ]]>  
    </description>
    <property-name>handler</property-name>
    <property-class>java.lang.String</property-class>
    <property-extension>
        <category>ICE_LAYOUT</category>
        <editor-class>
            &stringEditor;
        </editor-class>
    </property-extension>
</property>

<property>
    <description>
       <![CDATA[
        Space-separated list of CSS style class(es) to be applied when this 
        element is rendered. This value must be passed through as the "class" 
        attribute on generated markup. <br/>
        ]]>     
    </description>  
    <property-name>styleClass</property-name>
    <property-extension>
        <category>JAVASCRIPT</category>
        <editor-class>
            &styleClassEditor;
        </editor-class>
    </property-extension>
</property>