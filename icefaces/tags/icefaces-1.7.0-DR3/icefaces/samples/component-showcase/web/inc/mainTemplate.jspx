        <!--
            This is the main formating table which represents a layout view for
            the application components.  The components are pretty straightforward:
            header, left menu, and body components.  Follow the includes
            to see each individual components makeup.
        -->

        <ui:include src="./header.jspx" />

        <div class="columnleft">
             <ui:include src="./navigation.jspx" />
        </div>

        <div class="columnMiddle">

            <!-- Demo Title -->
            <div style="margin-top: 15px;" >
                <h2><ice:outputText
                    value="#{navigation.selectedPanel.menuContentTitle}"/></h2></div>

            <ice:outputConnectionStatus styleClass="navConnectionStatus" />

            <ui:insert name="content">
                <ice:panelGroup styleClass="contentIncludePanelGroup">
                    <ui:include src="#{navigation.selectedPanel.menuContentInclusionFile}"/>
                </ice:panelGroup>
            </ui:insert>

        </div>

        <!-- common footer layout markup -->
        <ui:include src="./footer.jspx" />

