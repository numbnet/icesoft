<project name="chat" default="build.portlet.jboss4.2.portal.ahs.war">
    
    <import file="../../etc/build-common.xml"/>
    
    <target name="build.war" depends="compile">
        <build.war web.xml="conf/web.sunri.icefaces.xml"/>
    </target>
    <target name="build.portlet.war">
        <build.portlet.war web.xml="conf/web.sunri.icefaces.xml"/>
    </target>
    
    <target name="build.portlet.jboss4.2.portal.war" description="build portlet application for JBoss4.2 portal without AHS">
        <property name="portlet.web.content.dir" location="web"/>
        <property name="portlet.web.dir" location="web"/>
        <antcall target="build.portlet.jboss4.2.war">
        </antcall>
    </target>
    <target name="jboss.ahs.war">
        <build.portlet.war web.xml="./conf/web.sunri.icefaces.portlet.ahs.xml"/>
    </target>    
    <target name="build.portlet.liferay.jboss4.2.war" depends="compile" description="build a portlet application for Liferay JBoss4.2 without AHS">
        <antcall target="build.portlet.liferay.war"/>
    </target>
    
    <target name="build.portlet.jboss4.2.portal.ahs.war" description="build portlet application for JBoss4.2 portal without AHS" depends="compile">
        <antcall target="jboss.ahs.war">
            <param name="jsf12" value=""/>
            <param name="serverjsf" value=""/>
            <param name="icefaces.ahs.enabled" value=""/>
        </antcall>  
    </target>

    <target name="tomcat6.0" description="a redirect call to build.portlet.jboss4.2.portal.ahs.war">
        <antcall target="build.portlet.jboss4.2.portal.ahs.war"/>
    </target>
    
    <target name="build.portlet.liferay.jboss4.2.ahs.war" depends="compile" description="build a portlet application for Liferay JBoss4.2 without AHS">
        <antcall target="jboss.ahs.war">
            <param name="jsf12" value=""/>
            <param name="serverjsf" value=""/>
            <param name="liferay" value=""/>
            <param name="icefaces.ahs.enabled" value=""/>
        </antcall>  
    </target>
    <target name="help">
        <echo level="info">
This application implements portlet version of chat application.
Use the following target to build the application
    build.portlet.liferay.war   - for Liferay Tomcat 5.x version
    build.portlet.jboss4.2.war  - for JBoss4.2 version
        </echo>
    </target>
</project>
