<project name="common-portal">
     
    <import file="./build-common.xml"/>

    <target name="build.war" depends="portlet.compile">
        <build.war web.xml="conf/${general.xml}"/>
    </target>

    <target name="build.portlet.jboss4.2.portal.war" description="build a portlet application for JBoss4.2 portal">
        <antcall target="build.portlet" >
            <param name="conf.xml" value="./conf/${general.xml}"/>
            <param name="jsf12" value=""/>
            <param name="serverjsf" value=""/>
            <param name="noelapi" value=""/>
        </antcall>
    </target>

    <target name="build.portlet.liferay.jboss4.2.war" description="build a portlet application for Liferay JBoss4.2">
        <antcall target="build.portlet">
            <param name="conf.xml" value="./conf/${general.xml}"/>
            <param name="liferay" value=""/>
            <param name="jsf12" value=""/>
            <param name="serverjsf" value=""/>
        </antcall>
    </target>
    
    <target name="build.portlet" depends="portlet.compile">
        <build.portlet.war web.xml="${conf.xml}"/>
    </target>
    
    <target name="build.portlet.liferay.tomcat6.war" description="build a portlet application for Liferay Tomcat6.x">
        <antcall target="build.portlet">
            <param name="conf.xml" value="./conf/${general.xml}"/>
            <param name="jsf12" value=""/>
            <param name="liferay" value=""/>
        </antcall>
    </target>
    
    <target name="build.portlet.liferay.tomcat5.war" description="build a portlet application for Liferay Tomcat5.x">
        <antcall target="build.portlet">
            <param name="conf.xml" value="./conf/${general.xml}"/>
            <param name="jsf11" value=""/>
            <param name="liferay" value=""/>
        </antcall>
    </target>
    
    <target name="build.portlet.liferay.jboss4.0.war" description="build a portlet application for Liferay JBoss4.0.x">
        <antcall target="build.portlet">
            <param name="conf.xml" value="./conf/${general.xml}"/>
            <param name="jsf11" value=""/>
            <param name="liferay" value=""/>
        </antcall>
    </target>    

    <target name="build.portlet.liferay.glassfishv2.war" description="build a portlet application for Liferay Glassfish V2">
        <antcall target="build.portlet">
            <param name="conf.xml" value="./conf/${general.xml}"/>
            <param name="jsf12" value=""/>
            <param name="serverjsf" value=""/>
            <param name="liferay" value=""/>
        </antcall>        
    </target>
    
    <target name="build.portlet.webspace10.1.war" description="build a portlet application for WebSpace 10.1"
            depends="build.portlet.liferay.glassfishv2.war">
            <!-- WebSpace is essentially Liferay on Glassfish V2 -->
    </target>
    
    <target name="build.portlet.websphere6.1.portal.war" description="build a portlet application for Websphere6.1 portal">
        <antcall target="build.portlet" >
            <param name="conf.xml" value="./conf/${general.xml}"/>
            <param name="jsf12" value=""/>
            <param name="serverjsf" value=""/>
            <param name="el-api" value=""/>
        </antcall>
    </target>
    
</project>

