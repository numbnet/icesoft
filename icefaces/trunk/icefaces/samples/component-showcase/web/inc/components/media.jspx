<ice:form xmlns:h="http://java.sun.com/jsf/html"
          xmlns:f="http://java.sun.com/jsf/core"
          xmlns:ice="http://www.icesoft.com/icefaces/component">

    <ice:panelTabSet styleClass="componentPanelTabSetLayout">

        <ice:panelTab label="#{msgs['tabbedHeadings.demo']}">

            <ice:panelGroup styleClass="formBorderHighlight">
                <ice:panelGrid columns="2" columnClasses="attributeColumnLabel, attributeColumnValue">
                    <h3><ice:outputText value="#{msgs['media.instructions']}"/></h3>
                    <ice:selectOneRadio value="#{media.selectedPlayer}" partialSubmit="true">
                        <f:selectItem itemValue="flash" itemLabel="#{msgs['media.flash.title']}"/>
                        <f:selectItem itemValue="quicktime" itemLabel="#{msgs['media.quicktime.title']}"/>
                        <f:selectItem itemValue="windows" itemLabel="#{msgs['media.windows.title']}"/>
                    </ice:selectOneRadio>
                </ice:panelGrid>
            </ice:panelGroup>

            <ice:panelGroup styleClass="formBorderHighlight">
                <ice:outputMedia player="#{media.selectedPlayer}" source="#{media.source}" style="#{media.style}">
                    <f:param name="#{media.autoStartParamName}" value="#{media.autoStartParamValue}"/>
                    <f:param name="#{media.controlsParamName}" value="#{media.controlsParamValue}"/>
                </ice:outputMedia>
            </ice:panelGroup>

        </ice:panelTab>

        <!--
        The bean is responsible for streaming html documentation to
        this placeholder
        -->
        <ice:panelTab label="#{msgs['tabbedHeadings.description']}">
            <iframe src="./docs/outputMediaDoc.html" class="includeIframe" width="100%"></iframe>
        </ice:panelTab>

        <!--
          Template for component source code.  This servlet loads
          the component example jsp include as an xml stream
        -->
        <ice:panelTab label="#{msgs['tabbedHeadings.source']}">
            <iframe src="./sourcecodeStream.html?path=./inc/components/media.jspx"
                    class="includeIframe" width="100%"></iframe>
        </ice:panelTab>

    </ice:panelTabSet>

</ice:form>
