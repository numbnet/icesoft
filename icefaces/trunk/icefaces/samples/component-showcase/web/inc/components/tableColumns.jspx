<ice:form id="iceform"
          xmlns:h="http://java.sun.com/jsf/html"
          xmlns:f="http://java.sun.com/jsf/core"
          xmlns:ice="http://www.icesoft.com/icefaces/component">

        <ice:panelTabSet id="icepnltabset" styleClass="componentPanelTabSetLayout">
            
            <ice:panelTab id="icepnltab" label="#{msgs['tabbedHeadings.demo']}">


                <ice:panelGroup styleClass="formBorderHighlight">
                    <h3>
                        <ice:outputText value="#{msgs['component.columns.title']}"/>
                    </h3>
                    <br/>
                    <ice:outputText value="#{msgs['component.columns.desc1']}"/>
                    <br/>
                    <ice:outputText value="#{msgs['component.columns.desc2']}"/>
                    <br/>
                    <ice:panelGroup id="columnsInputGroup">
                        <ice:outputLabel id="columnsOutputLabel"
                                         for="columnsInput"
                                         value="Columns: "/>
                        <ice:inputText id="columnsInput" maxlength="3"
                                       size="5"
                                       valueChangeListener="#{columnsBean.updateTableColumns}"
                                       value="#{columnsBean.columns}"
                                       partialSubmit="true">
                            <f:validateLongRange minimum="1" maximum="26"/>
                        </ice:inputText>
                        <ice:message id="columnsInputMessage"
                                     for="columnsInput"/>
                    </ice:panelGroup>
                </ice:panelGroup>

                <ice:panelGroup id="columnsContainer" styleClass="columnsContainer">
                    <ice:dataTable id="dataTbl" var="item"
                                       value="#{columnsBean.rowDataModel}"
                                       columnClasses="columnsColumn"
                                       rows="#{columnsBean.rows}">

                            <ice:columns id="columnDataModel" value="#{columnsBean.columnDataModel}"
                                         var="column">
                                <f:facet name="header">
                                    <ice:panelGroup >
                                        <ice:outputText id="rowData" value="#{columnsBean.columnDataModel.rowData}"/>
                                    </ice:panelGroup>
                                </f:facet>
                                <!-- display the table cell values-->
                                <ice:panelGroup style="text-align: center; white-space: nowrap;"
                                                menuPopup=":::::iceform:icepnltabset:0:cellPopup"
                                                contextValue="#{columnsBean.currentCellIndexes}"
                                                styleClass="#{columnsBean.cellStyleClass}">
                                                <!--
                                                menuPopup: up 4 NamingContainers, with the special leading double delimiter
                                                syntax (::) to denote moving up NamingContainers, not to UIViewRoot
                                                (columns, dataTable, panelTabSet, form)
                                                
                                                contextValue="#{columnsBean.rowDataModel.rowIndex};#{columnsBean.columnDataModel.rowIndex}"
                                                -->
                                    <ice:outputText id="cellValue"
                                            value="#{columnsBean.cellValue}"/>

                                </ice:panelGroup>

                            </ice:columns>

                        </ice:dataTable>
                </ice:panelGroup>

                <ice:menuPopup id="cellPopup">
                    <ice:menuItem value="Select Cell"
                                  actionListener="#{columnsBean.cellSelection}"/>
                </ice:menuPopup>
            </ice:panelTab>

            <ice:panelTab label="#{msgs['tabbedHeadings.description']}">
                <iframe src="/component-showcase/docs/columnsDoc.html"
                        class="includeIframe"
                        width="100%"></iframe>
            </ice:panelTab>

            <ice:panelTab label="#{msgs['tabbedHeadings.source']}">
                <iframe src="/component-showcase/sourcecodeStream.html?path=./inc/components/tableColumns.jspx"
                        class="includeIframe"
                        width="100%"></iframe>
            </ice:panelTab>

            <ice:panelTab label="#{msgs['tabbedHeadings.tutorial']}">
                <iframe src="http://facestutorials.icefaces.org/tutorial/columns-tutorial.html"
                        class="includeIframe"
                        width="100%"></iframe>
            </ice:panelTab>


        </ice:panelTabSet>
</ice:form>
