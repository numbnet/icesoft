<project name="component-showcase" default="build.portlet.pluto.tomcat5.war">
    
    <!--property name="ant.project.name" value="component-showcase"/-->

    <property file="build.properties"/>
    <property name="component.docs.dir" location="../../component/doc"/>
    <property name="portlet.build.web.dir" value="build/web"/>
    <property name="portlet.web.dir" value="portlet/web"/>
<!--
    <property name="icefaces.lib.dir" location="${build.common.basedir}/../../lib"/>
-->

        <property name="pluto.task" value="org.apache.pluto.ant.AssembleTask"/>    
    <import file="../etc/build-common.xml"/>
    
    <patternset id="additional.icefaces.lib.jars.to.include"
                includes="
                krysalis-jCharts-1.0.0-alpha-1.jar
                "
    />
    
    
    <patternset id="additional.compile.lib.jars"
                includes="
                servlet-api.jar
                "
    />
    <target name="build.portlet.war" description="" depends="compile">
        <copy todir="${web.content.dir}/docs" preservelastmodified="true">
            <fileset dir="${component.docs.dir}"/>
        </copy>
        <copy todir="${portlet.build.web.dir}/portlet">
            <fileset dir="${portlet.web.dir}">
                <include name="*.jspx"/>
            </fileset>
        </copy>
        
        <property name="portlet" value="true"/>
        <build.portlet.war web.xml="${comp.xml}"
                           portlet.web.content.dir="build/web"
                           portlet.conf.dir="portlet/conf"
                           portlet.conf.liferay.dir="portlet/conf/liferay"/>
    </target>    
    <!-- Pluto Portlet -->
  <path id="pluto-classes">
    <fileset dir="../../lib" includes="**/*.jar"/>
  </path>


  <typedef name="passemble" 
           classname="${pluto.task}"
           classpathref="pluto-classes"/>


  <target name="pluto-assemble">
        <echo message="Assembling..."/>
        <passemble webxml="conf/web.sunri.icefaces.ce.xml" 
                   portletxml="portlet/conf/portlet.xml" 
                   destfile="conf/web.sunri.icefaces.portlet.pluto.xml"/>
  </target> 
  
    <target name="build.portlet.pluto.tomcat5.war" 
            depends="compile" 
            description="Build a portlet application for Pluto on Tomcat 5.x without AHS">
        <property name="portlet" value="true"/>
        
        <!-- Uncomment out for building pluto portlet applicaitons -->
        <!--        -->

        <antcall target="pluto-assemble"/>

        
        <antcall target="build.portlet.war">
            <param name="comp.xml" value="./conf/web.sunri.icefaces.portlet.pluto.xml"/>
            <param name="jsf11" value=""/>
            <param name="pluto" value=""/>
        </antcall>
    </target>
</project>
