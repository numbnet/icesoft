<project name="component-showcase" default="tomcat6.0">
    
    <!--property name="ant.project.name" value="component-showcase"/-->

    <property file="build.properties"/>
    <property name="component.docs.dir" location="../../component/doc"/>
    <property name="portlet.build.web.dir" value="build/web"/>
    <property name="portlet.web.dir" value="portlet/web"/>
    <import file="../etc/build-common.xml"/>
    
    <patternset id="additional.icefaces.lib.jars.to.include"
                includes="
                krysalis-jCharts-1.0.0-alpha-1.jar
                "
    />
    
    
    <patternset id="additional.compile.lib.jars"
                includes="
                servlet-api.jar
                "
    />
    
    
    <!-- jars needed for form Facelets -->
    <patternset id="faclets.jars"
                includes="
                icefaces-facelets.jar
                el-ri.jar
                "
    />
    <target name="clean" depends="common.clean">
        <delete dir="${web.content.dir}/docs"/>
    </target>
    
    <target name="build.war" depends="compile"
            description="Creates a Sun RI version of component-showcase.">
        <copy todir="${web.content.dir}/docs" preservelastmodified="true">
            <fileset dir="${component.docs.dir}"/>
        </copy>
        
        <build.war web.xml="conf/web.sunri.icefaces.ce.xml"/>
    </target>
    
    <target name="build.portlet.war" description="" depends="compile">
        <copy todir="${web.content.dir}/docs" preservelastmodified="true">
            <fileset dir="${component.docs.dir}"/>
        </copy>
        <copy todir="${portlet.build.web.dir}/portlet">
            <fileset dir="${portlet.web.dir}">
                <include name="*.jspx"/>
            </fileset>
        </copy>
        
        <property name="portlet" value="true"/>
        <build.portlet.war web.xml="${comp.xml}"
                    portlet.web.content.dir="build/web"
                    portlet.conf.dir="portlet/conf"
                    portlet.conf.liferay.dir="portlet/conf/liferay"/>
    </target>
    
    <target name="build.facelet.war" depends="compile"
            description="Creates a facelets version of component-showcase.">
        <copy todir="${web.content.dir}/docs" preservelastmodified="true">
            <fileset dir="${component.docs.dir}"/>
        </copy>
        
        <copy todir="${app.lib.dir}" preservelastmodified="true">
            
            <fileset dir="${icefaces.lib.dir}">
                <patternset refid="faclets.jars"/>
            </fileset>
        </copy>
        
        <build.war web.xml="conf/web.sunri.icefaces.facelet.xml"/>
    </target>
    <target name="build.facelet.tomcat5.x.war" depends="compile"
            description="Creates a facelets version of component-showcase for Tomcat5.x.">
            <antcall target="build.facelet.war">

            </antcall>
    </target>  
    <target name="build.facelet.weblogic8.1.war" depends="compile"
            description="Creates a facelets version of component-showcase for Weblogic 8.1.">
