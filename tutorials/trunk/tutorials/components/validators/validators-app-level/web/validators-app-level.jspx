<html>
    <f:view xmlns:h="http://java.sun.com/jsf/html"
            xmlns:f="http://java.sun.com/jsf/core"
            xmlns:ice="http://www.icesoft.com/icefaces/component"
    >
        
        <ice:outputDeclaration doctypeRoot="HTML"
                               doctypePublic="-//W3C//DTD HTML 4.01 Transitional//EN"
                               doctypeSystem="http://www.w3.org/TR/html4/loose.dtd"/>
        
        
        <head>
            <meta http-equiv="Content-Type"
                  content="text/html; charset=iso-8859-1"></meta>
            <title>Validators - Application Level</title>
            <link href="./xmlhttp/css/xp/xp.css" rel="stylesheet" type="text/css"/>
            <link href="css/validate.css" rel="stylesheet" type="text/css" />
        </head>
        
        <body>
            <h2>Application Level Validation</h2>
            
            <ice:form id="tutorialForm" partialSubmit="true">
                <ice:inputText id="name" value="#{user.name}">
                    
                </ice:inputText>
                <ice:message id="nameError" for="name"/>  
                <br/>
                <ice:commandButton value="Register" actionListener="#{user.register}"/>
                <br/>
                <ice:outputText value="Name: "/>
                <ice:outputText value="#{user.displayName}" />
                <br/><br/>
                
            </ice:form>
            
        </body>
        
    </f:view>
</html>
