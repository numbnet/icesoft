<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.2.xsd">

	<security:http auto-config="true" access-denied-page="/accessDenied.jspx">
		<security:intercept-url pattern="/acegilogin.jspx" filters="none" requires-channel="any"/>
		<security:intercept-url pattern="/index.jsp" filters="none" requires-channel="any"/>
		<security:intercept-url pattern="/secured/**" access="ROLE_ALLACCESS, ROLE_URLACCESS" requires-channel="any"/>
		<security:form-login login-page="/springSecurityLogin.jspx" login-processing-url="/j_spring_security_check.jsp" default-target-url="/secured/welcome.jspx" />
		<security:logout logout-url="/j_spring_security_logout.jsp" logout-success-url="/logoutSuccess.jspx" />
	</security:http>
	
	<security:authentication-provider user-service-ref="userDetailsService"/>

	<bean id="userDetailsService"
		class="com.icesoft.icefaces.security.UserDetailsServiceImpl">
		<constructor-arg ref="userRepository" />
	</bean>

	<bean id="userRepository" class="com.icesoft.icefaces.security.UserDaoImpl"/>

</beans>
