<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>
	<application>
		<variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver
		</variable-resolver>
	</application>


	<managed-bean>
		<managed-bean-name>shoppingBean</managed-bean-name>
		<managed-bean-class>com.icesoft.icefaces.security.beans.ShoppingBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<description>The shopping service</description>
			<display-name>shoppingService</display-name>
			<property-name>shoppingService</property-name>
			<value>#{shoppingService}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>com.icesoft.icefaces.security.beans.LoginBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
		

	<navigation-rule>
		<from-view-id>/secured/hello.jspx</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/secured/page2.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	

	<navigation-rule>
		<from-view-id>/secured/page2.jspx</from-view-id>
		<navigation-case>
			<from-outcome>back</from-outcome>
			<to-view-id>/secured/hello.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
                <from-outcome>logout</from-outcome>
                <to-view-id>/spring-authentication/j_spring_security_logout.jsp</to-view-id>
        </navigation-case>
	</navigation-rule>
	<navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
                <from-outcome>accessDenied</from-outcome>
                <to-view-id>/accessDenied.jspx</to-view-id>
        </navigation-case>
</navigation-rule>
	

</faces-config>