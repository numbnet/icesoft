<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core" version="2.0">
<head>
<title>Hello World</title>
</head>
<body>
<f:view>
	<h:form id="form">
		<h:panelGrid id="grid" columns="1">
			<h:outputText value="HELLO #{sessionScope.SPRING_SECURITY_LAST_USERNAME}" /> 
			<h:outputText id="output1" value="Please enter the product id" />
			<h:inputText id="input1" value="#{shoppingBean.productId}"
				required="true" />
			<h:commandButton id="button1" value="Buy"
				action="#{shoppingBean.send}" />
			<h:message id="message1" for="input1" />

			<h:commandButton actionListener action="logout" value="Logout" immediate="true"/>
		</h:panelGrid>
	</h:form>
</f:view>
</body>
</html>
