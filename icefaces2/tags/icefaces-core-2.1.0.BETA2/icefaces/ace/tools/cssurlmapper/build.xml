<project name="cssurlmapper" default="compile" basedir=".">

	<property name="build" location="build"/>
	<property name="dist" location="dist"/>
	<property name="lib" location="lib"/>
	<property name="src" location="src/org/icefaces/ace/util/cssurlmapper"/>

	<path id="compile.run.classpath">
		<fileset dir="${lib}" includes="*.jar"/>
	</path>
	
	<target name="compile">
		<mkdir dir="${build}" />
		<javac srcdir="${src}" destdir="${build}" debug="true" includeantruntime="true">
			<classpath refid="compile.run.classpath"/>
		</javac>
		<mkdir dir="${dist}" />
		<jar jarfile="${dist}/${ant.project.name}.jar" basedir="${build}"/>
	</target>
	
	<target name="clean">
		<delete dir="${build}"/>
		<delete dir="${dist}"/>
	</target>

</project>
