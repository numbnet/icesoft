<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
    </application>

    <!-- Drag and Drop Bean-->
    <managed-bean>
        <description>
            Backing bean for tree example.
        </description>
        <managed-bean-name>dragDrop</managed-bean-name>
        <managed-bean-class>
            com.icesoft.icefaces.tutorial.component.dragDrop.basic.DragDropBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

</faces-config>