<renderer>
	<description>
		<![CDATA[<p>Render a checkbox for a selectManyCheckbox component
		  when the layout of the selectManyCheckbox component is "spread".</p>]]>
	</description>

	<component-family>com.icesoft.faces.HtmlCheckbox</component-family>

	<renderer-type>com.icesoft.faces.Checkbox</renderer-type>

	<renderer-extension>
		<instance-name>checkbox</instance-name>
		<is-container>false</is-container>
		<renders-children>false</renders-children>
		<tag-name>checkbox</tag-name>
		<taglib-prefix>@taglib-prefix@</taglib-prefix>
		<taglib-uri>@taglib-uri@</taglib-uri>
	</renderer-extension>

</renderer>
