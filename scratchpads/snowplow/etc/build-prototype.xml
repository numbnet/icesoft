<project default="build.all" name="ICEpsuh Prototype Integration builds">

	<property file="build.properties"/>
	<import file="build-common.xml"/>
	
	<target name="bin-dist">
		<echo>Building ICEpush Prototype Binary Integration</echo>	
		
		<antcall target="jar-icepush-core"/>
		<copy file="./core/${dist.dir}/icepush.jar" todir="${dist.dir}"/>
		
	</target>
	
	<target name="bin-samples">
		<ant dir="${samples.dir}/basic" target="war"/>
		<copy file="${samples.dir}/basic/dist/icepush-prototype-basic.war" todir="${dist.dir}"/>
		
		<ant dir="${samples.dir}/icechat/prototype" target="war">
		</ant>
		<copy file="${samples.dir}/icechat/prototype/dist/icechat-prototype.war" todir="${dist.dir}"/>
	</target>

	
	<target name="build.all" depends="bin-dist,bin-samples"/>
	
	
</project>