<project name="ICEpush GWT integration" default="bin-dist">
	
	<property file="../../build.properties"/>
	
	<import file="../../build-common.xml"/>
	
	<target name="bin-dist">
		<echo>Building ICEpush GWT Binary Integration</echo>
		<antcall target="jar-gwt-core"/>
		<copy file="./core/${dist.dir}/icepush-gwt.jar" todir="${dist.dir}"/>
	</target>
	
	<target name="bin-samples" depends="bin-dist">
		<ant dir="./samples/greeting" target="war"/>
		<ant dir="./samples/commands" target="war"/>
		<copy todir="${dist.dir}">
			<fileset dir="./samples/greeting" includes="**.war"/>
			<fileset dir="./samples/commands" includes="**.war"/>
		</copy>
	</target>
	
	<target name="jar-gwt-core">
		<ant dir="./core" target="jar"/>
	</target>
	
	<target name="clean">
		<clean/>
		<ant dir="./core" target="clean"/>
		<ant dir="./samples/greeting" target="clean"/>
		<ant dir="./samples/commands" target="clean"/>
	</target>

</project>