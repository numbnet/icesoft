<project name="icepush-prototype-integration" default="build.all">
	
	<property file="../../build.properties"/>
	
	<import file="../../build-common.xml"/>
	
	<target name="build.all" depends="bin.dist,bin.samples"/>
	
	<target name="bin.dist" depends="clean">
		<echo>Building ICEpush Prototype Binary Integration</echo>		
		<copy file="./core/${js.dir}/prototype.icepush.js" todir="${dist.dir}"/>
	</target>
	
	<target name="bin.samples" depends="clean">		
		<ant dir="./samples" target="bin-samples"/>
		<copy.dist.wars fromdir="./samples/${dist.dir}"/>
	</target>
	
	<target name="clean">
		<clean/>
		<ant dir="./samples" target="clean"/>
	</target>
	
</project>