<project name="icepush-notify" default="compile">
    <property file="build.properties"/>
    <property name="java.dir" location="src/main/java"/>
    <property name="lib.dir" location="../../../lib"/>
    <property name="build.dir" location="./build"/>
    <property name="classes.dir" location="${build.dir}/classes"/>

    <tstamp>
        <format property="build.time" pattern="yyyy-mm-dd hh:mm:ss"/>
    </tstamp>

    <patternset id="lib.compile">
        <include name="*.jar"/>
    </patternset>

    <target name="clean" description="clean up">
        <delete dir="${build.dir}"/>
    </target>

    <target name="pre.compile" description="pre-compilation tasks">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${build.dir}/classes"/>
    </target>

    <target name="compile" depends="pre.compile" description="compile classes">
        <javac srcdir="${java.dir}"
               destdir="${classes.dir}"
               source="1.5"
               target="1.5"
               debug="true">
            <classpath>
                <fileset dir="${lib.dir}">
                    <patternset refid="lib.compile"/>
                </fileset>
                <fileset dir="../../../core/build/dist"/>
            </classpath>
        </javac>
    </target>

</project>

