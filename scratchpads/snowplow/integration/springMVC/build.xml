<project default="bin-dist" name="icepush-spring build interface.">

	<property file="../../build.properties" />

	<target name="bin-dist">
		<echo>Building ICEpush Spring MVC Binary Integration</echo>

		<antcall target="jar-jsp-core" />
		<copy file="../../integration/jsp/core/${dist.dir}/icepush-jsp.jar" todir="${dist.dir}" />
	</target>

	<target name="bin-samples">
		<ant dir="./samples/dice" target="war">
		</ant>
		<copy file="./samples/dice/${dist.dir}/icepush-springmvc-dice.war" todir="${dist.dir}">
		</copy>

	</target>

	<target name="jar-jsp-core">
		<ant antfile="build.xml" dir="../jsp/core" target="jar" />
	</target>

	<target name="clean">
		<clean />
		<ant dir="./core" target="clean" />
		<ant antfile="build.xml" dir="./samples/region" target="clean" />
		<ant antfile="build.xml" dir="./samples/register" target="clean" />
		<ant antfile="build.xml" dir="./samples/push" target="clean" />
	</target>

</project>