<project default="bin-dist" name="icepush-spring build interface.">
	
	<!-- all integrations must provide this target
	- assume that the current directory is at the snowplow root.  Thus all paths are relative to the root of the snowplow project.
	 -->
	<target name="bin-dist">
		<!-- nothing required here - no specific integration bundle. -->
	</target>
	
	<!-- all integrations must provide this target
		- assume that the current directory is at the snowplow root.  Thus all paths are relative to the root of the snowplow project.
		- target must build each of the samples and copy the resulting war file to ${bin.samples.dir}
	-->
	<target name="bin-samples">
		<ant antfile="build.xml" dir="./samples/icechat" target="spring"/>
		<copy file="./samples/icechat/web/spring/dist/icechat-spring.war" todir="${bin.sample.dir}"></copy>
		<ant antfile="build.xml" dir="./samples/icechat" target="spring-region"/> 
		<copy file="./samples/icechat/web/spring-region/dist/icechat-spring-region.war" todir="${bin.sample.dir}"></copy>
	</target>
	
	<!-- all integrations must also provide this target.  Again the directory will be the root of the snowplow project.-->
	<target name="clean">
		
	</target>
	
	
</project>