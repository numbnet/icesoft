<project name="icepush-jsp" default="jar">

    <property file="build.properties"/>

    <property name="java.dir" location="./src/main/java"/>
    <property name="web.dir" location="./src/main/webapp"/>
    <property name="lib.dir" location="../../../lib"/>
    <property name="build.dir" location="./build"/>
    <property name="classes.dir" location="${build.dir}/classes"/>
    <property name="meta.dir" location="./src/main/resources/META-INF/"/>
    <property name="dist.dir" location="${build.dir}/dist"/>

    <patternset id="lib.compile">
        <include name="*.jar"/>
    </patternset>

    <patternset id="lib.deploy">
        <include name="icepush.jar"/>
    </patternset>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <target name="pre.compile" description="prepare for compilation">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${build.dir}/classes"/>
        <mkdir dir="${build.dir}/dist"/>
    </target>

    <target name="compile" depends="pre.compile" description="compile jsp core source">
        <javac srcdir="${java.dir}"
               destdir="${classes.dir}"
               source="1.5"
               target="1.5"
               debug="true">

            <classpath>
                <fileset dir="${lib.dir}">
                    <patternset refid="lib.compile"/>
                </fileset>
                <fileset dir="../../../core/build/dist/"/>
		<pathelement location="../../common/notify/build/classes"/>
            </classpath>
        </javac>

    </target>

    <target name="jar" depends="compile" description="fill the jar">
        <jar destfile="${dist.dir}/${ant.project.name}.jar">
            <manifest>
                <attribute name="Built-By" value="${user.name}"/>
                <section name="org.icefaces">
                    <attribute name="Implementation-Title"
                               value="${product}"/>
                    <attribute name="Implementation-Version"
                               value="${release.type} ${version.primary}.${version.secondary}.${version.tertiary}_${build.number} (${build.time})"/>
                    <attribute name="Implementation-Vendor"
                               value="${company}"/>
                </section>
            </manifest>
	    <metainf dir="${meta.dir}"/>

            <fileset dir="${classes.dir}"/>
            <fileset dir="../../common/notify/build/classes/"/>
        </jar>
    </target>
</project>

