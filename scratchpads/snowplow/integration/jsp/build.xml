<project name="icepush-jsp-integration" default="build.all">

	<property file="../../build.properties" />

		<import file="../../build-common.xml" />

		<target name="build.all" depends="bin.dist,bin.samples" />

		<target name="bin.dist">
			<echo>Building ICEpush JSP Binary Integration</echo>
			<ant dir="./core" />
			<copy file="./core/${dist.dir}/icepush-jsp.jar" todir="${dist.dir}" />
		</target>

		<target name="bin.samples">
			<ant dir="./samples" target="bin-samples"/>
			<copy.dist.wars fromdir="./samples/${dist.dir}"/>
		</target>

		<target name="clean">
			<clean />
			<ant dir="./core" target="clean" />
			<ant dir="./samples" target="clean" />
		</target>

</project>