  <target name="test" description="Run development and production mode tests">
    
  </target>


  <target name="hosted" depends="devmode" description="Run development mode (NOTE: the 'hosted' target is deprecated)" />

  <target name="build" depends="gwtc,copy-classpath" description="Build this project">
  	<delete dir="${build.dir}"/>
  	<mkdir dir="${build.dir}"/>
  	<copy todir="${build.dir}">
  		<fileset dir="war">
			<include name="**"/>
		</fileset>
  	</copy>
  	<!--copy todir="${build.dir}/WEB-INF/lib" preservelastmodified="true" verbose="true">
			<fileset dir="../../service/api/dist">
				<include name="*.jar"/>
			</fileset>
		</copy>
		
		<copy todir="${build.dir}/WEB-INF/lib" preservelastmodified="true" verbose="true">
			<fileset dir="../../model/dist">
				<include name="*.jar"/>
			</fileset>
		</copy>
		
		<copy todir="${build.dir}/WEB-INF/lib" preservelastmodified="true" verbose="true">
			<fileset dir="../../beans/dist">
				<include name="*.jar"/>
