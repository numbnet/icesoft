		<copy todir="${build.dir}/WEB-INF/lib" preservelastmodified="true" verbose="true">
			<fileset dir="../../../lib">
				<include name="icepush.jar"/>
			</fileset>
		</copy-->
		
  </target>
	
	<target name="copy-classpath">
		<copy file="../../beans/dist/icechat-beans.jar" todir="war/WEB-INF/lib"/>
	  	<copy file="../../api/dist/icechat-api.jar" todir="war/WEB-INF/lib"/>
		<copy file="../../../../integration/gwt/core/dist/icepush-gwt.jar" todir="war/WEB-INF/lib"/>
	</target>
  
  <target name="build-server" depends="javac,copy-classpath" description="Build this project">
  	<delete dir="${build.dir}"/>
  	<mkdir dir="${build.dir}"/>
  	<copy todir="${build.dir}">
  		<fileset dir="war">
			<include name="**"/>
		</fileset>
  	</copy>
  	

  	<!--copy todir="${build.dir}/WEB-INF/lib" preservelastmodified="true" verbose="true">
			<fileset dir="../../service/api/dist">
				<include name="*.jar"/>
			</fileset>
		</copy>
		
		<copy todir="${build.dir}/WEB-INF/lib" preservelastmodified="true" verbose="true">
			<fileset dir="../../model/dist">
				<include name="*.jar"/>
			</fileset>
		</copy>
		
		<copy todir="${build.dir}/WEB-INF/lib" preservelastmodified="true" verbose="true">
			<fileset dir="../../beans/dist">
				<include name="*.jar"/>
			</fileset>
		</copy>
		<copy todir="${build.dir}/WEB-INF/lib" preservelastmodified="true" verbose="true">
			<fileset dir="../../../lib">
				<include name="icepush.jar"/>
			</fileset>
		</copy-->
		
  </target>


  <target name="war" depends="clean,build" description="Create a war file">
  	<antcall target="test"/>
  	<mkdir dir="${dist.dir}"/>
    <zip destfile="${dist.dir}/${icechat.gwt.war.name}" basedir="${build.dir}"/>
  </target>

  <target name="clean" description="clean's this project">
    <delete dir="war/WEB-INF/classes" failonerror="false" />
    <delete dir="war/icechatmodule" failonerror="false" />
  	<delete dir="war/WEB-INF/lib"/>
  </target>
  
  <target name="server" depends="build-server" description="rebuild server component.">
  	<mkdir dir="${dist.dir}"/>
    <zip destfile="${dist.dir}/${icechat.gwt.war.name}" basedir="${build.dir}"/>
  </target>

</project>
