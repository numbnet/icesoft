<?xml version="1.0" encoding="utf-8" ?>
<project name="icechat-spring" default="war">

	<property name="root.offset" value="../../.." />
	<property file="${root.offset}/build.properties" />

	<import file="${root.offset}/build-common.xml" />
	<import file="../build-common.xml" />


	<target name="war" depends="compile">
		<build.war>
			<add.libs>
				<fileset refid="beans" />
				<fileset dir="${root.offset}/integration/spring/core/${dist.dir}"/>
			</add.libs>
		</build.war>
	</target>


	<target name="compile" depends="clean">
		<compile>
			<add.classpath.elements>
				<fileset refid="api" />
				<fileset refid="beans" />
				<fileset dir="${web.dir}/WEB-INF/lib" />
			</add.classpath.elements>
		</compile>
	</target>


</project>
