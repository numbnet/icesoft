<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
       
	<bean id="loginController"
      	  class="org.icepush.samples.icechat.cdi.controller.LoginController">
	</bean>
    
	<bean id="jsfLoginController"
      	  class="org.icepush.samples.icechat.jsf.JSFLoginController"
          scope="request">
          <property name="loginController" ref="loginController" />
	</bean>
    
	<bean id="pushRequestContext"
      	  class="org.icepush.samples.icechat.jsf.JSFPushRequestContextAdapter"
          scope="request">
	</bean>
    
</beans>
