<project default="jar" name="icechat-service-ejb-nodb">
	
	<property file="../../build-common.properties"/>
	<property file="local.properties"/>
	
	
	
	<path id="compile.path">
		<pathelement location="../../model/dist/${icechat.model.jar.name}"/>
		<pathelement location="../api/dist/${icechat.service.api.jar.name}"/>
		<fileset dir="${gf.compile.path}">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<target name="clean">
		<echo>Cleaning Service EJB-nodb...</echo>
		<delete dir="${build.dir}"/>
		<delete dir="${dist.dir}"/>
	</target>
	
	<target name="init-compile">
		<mkdir dir="${build.dir}"/>
	</target>
	
	<target name="compile" depends="init-compile">
		<echo>Compiling Service EJB-nodb...</echo>
		<javac srcdir="${java.dir}" destdir="${build.dir}">
			<classpath refid="compile.path"/>
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<echo>Building Service EJB-nodb Jar...</echo>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/${icechat.service.ejb.nodb.jar.name}">
			<metainf dir="${resources.dir}"/>
		</jar>
	</target>
</project>
