<project name="icechat-service-ejb-db" default="jar">
	
	<propertyfile file="../../build-common.properties"/>
	
	<path id="compile.path">
		<pathelement location="${icechat.model.jar.name}"/>
		<pathelement location="${icechat.service.api.jar.name}"/>
	</path>

	<target name="clean">
		<echo>Cleaning Service EJB...</echo>
		<delete dir="${build.dir}"/>
		<delete dir="${dist.dir}"/>
	</target>
	
	<target name="init-compile">
		<mkdir dir="${build.dir}"/>
		<ant inheritAll="false" antfile="../../model/build.xml" target="clean"/>
		<ant inheritAll="false" antfile="../../model/build.xml" target="jar"/>
	</target>
	
	<target name="compile" depends="init-compile">
		<echo>Compiling Service EJB...</echo>
		<javac srcdir="${java.dir}" destdir="${build.dir}">
			<classpath refid="compile.path"/>
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<echo>Building Service EJB Jar...</echo>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/${icechat.service.ejb.jar.name}">
			<metainf dir="${resources.dir}"/>
		</jar>
	</target>
	
</project>
