<project default="jar">
	<property name="java.dir" value="src/main/java"/>
	<property name="resources.dir" value="src/main/resources"/>
	<property name="build.dir" value="build"/>
	<property name="dist.dir" value="dist"/>
	<property name="jar.name" value="IceChatCDI.jar"/>
	<property name="model.jar.name" value="../model/dist/IceChatModel.jar"/>
	<property name="ejb.jar.name" value="../ejb/dist/IceChatEJB.jar"/>
	<property name="gf.compile.path" value="../../common_lib/gfv3"/>
	
	<path id="compile.path">
		<pathelement location="${model.jar.name}"/>
		<pathelement location="${ejb.jar.name}"/>
		<fileset dir="${gf.compile.path}">
			<include name="**/*.jar"/>
		</fileset>
		

	</path>

	<target name="clean">
		<echo>Cleaning CDI Beans...</echo>
		<delete dir="${build.dir}"/>
		<delete dir="${dist.dir}"/>
	</target>
	
	<target name="init-compile">
		<mkdir dir="${build.dir}"/>
		
		<!-- build the ejb component first -->
		<ant inheritAll="false" antfile="../ejb/build.xml" target="clean"/>
		<ant inheritAll="false" antfile="../ejb/build.xml" target="jar"/>
	</target>
	
	<target name="compile" depends="init-compile">
		<echo>Compiling CDI Beans...</echo>
		<javac srcdir="${java.dir}" destdir="${build.dir}">
			<classpath refid="compile.path"/>
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<echo>Building CDI Beans Jar...</echo>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/${jar.name}">
			<metainf dir="${resources.dir}"/>
		</jar>
	</target>
</project>
