<project default="jar" name="icechat-beans">
	
	<property file="../build-common.properties"/>
	<property file="local.properties"/>
	
	<path id="compile.beans.path">
		<pathelement location="../../lib/icepush.jar"/>
		<pathelement location="../model/dist/${icechat.model.jar.name}"/>
		<pathelement location="../service/api/dist/${icechat.service.api.jar.name}"/>
		<fileset dir="${gf.compile.path}">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<target name="clean">
		<echo>Cleaning CDI Beans...</echo>
		<delete dir="${build.dir}"/>
		<delete dir="${dist.dir}"/>
	</target>
	
	<target name="init-compile">
		<mkdir dir="${build.dir}"/>

	</target>
	
	<target name="compile" depends="clean, init-compile">
		<echo>Compiling CDI Beans...</echo>
		<javac srcdir="${java.dir}" destdir="${build.dir}" debug="true" debuglevel="lines, vars, and source">
			<classpath refid="compile.beans.path"/>
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<echo>Building CDI Beans Jar...</echo>
		<mkdir dir="${dist.dir}"/>
		<jar basedir="${build.dir}" destfile="${dist.dir}/${icechat.beans.jar.name}">
			<metainf dir="${resources.dir}"/>
		</jar>
	</target>
</project>
