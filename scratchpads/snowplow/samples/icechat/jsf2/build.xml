<?xml version="1.0" encoding="utf-8" ?>
<project name="icechat-jsf2" default="war">
    
	<property name="root.offset" value="../../.."/>
	<property file="${root.offset}/build.properties" />

	<import file="${root.offset}/build-common.xml" />
	<import file="../build-common.xml" />
    <property file="local.properties"/>
    
    
	<target name="war" depends="compile">
		<build.war>
			<add.libs>
				<fileset refid="beans" />
				<fileset refid="auth" />
				<fileset refid="cdi"/>
			</add.libs>
		</build.war>
	</target>

	<target name="compile" depends="clean">
		<compile compile.source="1.6" compile.target="1.6">
			<add.classpath.elements>
				<fileset refid="auth"/>
				<fileset refid="api"/>
				<fileset refid="beans"/>
				<fileset refid="cdi"/>
				<fileset dir="lib"/>
				<fileset dir="../cdi/lib"/>
			</add.classpath.elements>
		</compile>
	</target>

</project>
