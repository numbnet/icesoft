<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
             version="1.0">
             
   <persistence-unit name="seam-auctionMonitor">
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>java:/seam-auctionMonitorDatasource</jta-data-source>
      <properties>
         <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
         <property name="hibernate.cache.use_query_cache" value="true"/>
   <!-- auto generated are ->     <property name="hibernate.show_sql" value="true"/>
         <property name="jboss.entity.manager.factory.jndi.name" value="java:/seam-auctionMonitorEntityManagerFactory"/> -->
         <!-- added next 2 rows instead -->
         <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider"/>
         <property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.JBossTransactionManagerLookup"/>
      </properties>
   </persistence-unit>
    
</persistence>
