<?xml version="1.0"?>

<project name="seam-comp-showcase-common" default="jboss" basedir=".">
 	
	   <target name="jboss"  description="Build seam-comp-showcase and deploy to JBoss 4.2.x.GA">
	     	<ant antfile="build-scripts/build-jboss.xml"/>
	   </target>

	   <target name="glassfish" description="Build seam-comp-showcase for deployment to Glassfish V2 or V1">
	     	<ant antfile="build-scripts/build-glassfish.xml"/>
	   </target>
	
	   <target name="weblogic" description="Build seam-comp-showcase for deployment to WebLogic 10 or 9.2">
	     	<ant antfile="build-scripts/build-weblogic.xml"/>
	   </target>

	   <target name="tomcat6"  description="Build seam-comp-showcase for deployment to Tomcat 6">
		     	<ant antfile="build-scripts/build-tomcat6.xml" />
		   </target>
	
