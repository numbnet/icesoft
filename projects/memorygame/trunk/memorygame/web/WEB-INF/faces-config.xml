<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
	<application>
        <locale-config>            
            <default-locale>en</default-locale>
        </locale-config>
		<message-bundle>val-override</message-bundle>
		<view-handler>com.icesoft.faces.facelets.D2DFaceletViewHandler</view-handler>
	</application>
	
    <converter>
      <converter-id>GridSizeFormatter</converter-id>
      <converter-class>com.icefaces.project.memory.converter.GridSizeFormatter</converter-class> 
    </converter>
    
    <validator>
	  <validator-id>UniqueGameNameValidator</validator-id>
	  <validator-class>com.icefaces.project.memory.validator.UniqueGameNameValidator</validator-class>
	</validator>
	
	<!-- Bean Declarations -->
	<managed-bean>
		<managed-bean-name>lobbyBean</managed-bean-name>
		<managed-bean-class>com.icefaces.project.memory.bean.LobbyBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>userSession</property-name>
			<value>#{userSession}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>boardBean</managed-bean-name>
		<managed-bean-class>com.icefaces.project.memory.bean.BoardBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>userSession</property-name>
			<value>#{userSession}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>chatBean</managed-bean-name>
		<managed-bean-class>com.icefaces.project.memory.bean.ChatBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>sender</property-name>
			<value>#{userSession.name}</value>
		</managed-property>
		<managed-property>
			<property-name>chatRoom</property-name>
			<value>#{userSession.currentGame.chat}</value>
		</managed-property>		
	</managed-bean>	
    
	<managed-bean>
		<managed-bean-name>userSession</managed-bean-name>
		<managed-bean-class>com.icefaces.project.memory.user.UserSession</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>gameManager</property-name>
			<value>#{gameManager}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>redirectBean</managed-bean-name>
		<managed-bean-class>com.icefaces.project.memory.bean.RedirectBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>userSession</property-name>
			<value>#{userSession}</value>
		</managed-property>
	</managed-bean>
	
    <managed-bean>
        <managed-bean-name>colorBean</managed-bean-name>
        <managed-bean-class>com.icefaces.project.memory.bean.color.ColorBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>	

	<managed-bean>
		<managed-bean-name>gameManager</managed-bean-name>
		<managed-bean-class>com.icefaces.project.memory.game.GameManager</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	
	<!-- Navigation Rules -->
	<navigation-rule>
		<from-view-id>/lobby.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>board</from-outcome>
			<to-view-id>/board.iface</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/board.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>lobby</from-outcome>
			<to-view-id>/lobby.iface</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
</faces-config>
