<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE web-app PUBLIC
  "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd">


<web-app>
    <display-name>Async Server</display-name>
    <description>
        ICEfaces Asynchronous HTTP Server
    </description>

    <!--  Define async server mode -->
    <context-param>
        <param-name>com.icesoft.faces.async.server</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>com.icesoft.util.net.messaging.properties</param-name>
        <param-value>jboss.properties</param-value>
        <!--       
        <param-value>jboss_ha.properties</param-value>
        <param-value>weblogic.properties</param-value>
        <param-value>websphere.properties</param-value>
        -->
    </context-param>

    <!--
    <listener>
        <listener-class>com.icesoft.faces.util.event.servlet.ContextEventRepeater</listener-class>
    </listener>
    -->

    <!-- Asynchronous Servlet -->
    <servlet>
        <servlet-name>Asynchronous Servlet</servlet-name>
        <servlet-class>com.icesoft.faces.async.server.AsyncServlet</servlet-class>		
        <init-param>
            <param-name>com.icesoft.faces.async.server.port</param-name>
            <param-value>51315</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <session-config>
      <session-timeout>20</session-timeout>
    </session-config>
</web-app>
