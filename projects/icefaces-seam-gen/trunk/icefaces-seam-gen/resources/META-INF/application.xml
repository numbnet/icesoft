<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/javaee" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/application_5.xsd"
             version="5">
    
   <display-name>@projectName@</display-name>
   
   <module>
      <web>
         <web-uri>@projectName@.war</web-uri>
         <context-root>/@projectName@</context-root>
      </web>
   </module>
   
   <module>
      <ejb>@projectName@.jar</ejb>
   </module>
   
   <!-- Seam and EL -->
   <module>
       <java>jboss-seam.jar</java>
   </module>   
   <module>
      <java>jboss-el.jar</java>
   </module>

   <!-- jBPM -->
   <module>
      <java>jbpm-jpdl.jar</java>
   </module>
    
   <!-- Drools and dependencies -->
   <module>
      <java>drools-compiler-4.0.0.MR2.jar</java>
   </module>
   <module>
      <java>drools-core-4.0.0.MR2.jar</java>
   </module>
   <module>
      <java>mvel14-1.2beta16.jar</java>
   </module>
   <module>
      <java>janino-2.5.6.jar</java>
   </module>
   <module>
      <java>antlr-3.0b7.jar</java>
   </module>   
    
</application>
