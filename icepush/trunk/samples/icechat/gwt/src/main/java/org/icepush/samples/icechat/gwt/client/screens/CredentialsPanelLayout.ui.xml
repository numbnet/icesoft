<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .inlineLabel{
        display: inline;
        }

        .floatedRight{
            float: right;
        }
    </ui:style>
    <gwt:VerticalPanel>
        <gwt:HorizontalPanel width="100%">
            <gwt:HTMLPanel>You are currently logged in as: <gwt:Label ui:field="usernameLabel" stylePrimaryName="{style.inlineLabel}"/> </gwt:HTMLPanel>
        </gwt:HorizontalPanel>
        <gwt:Anchor gwt:text="[Logout]" ui:field="logoutButton" stylePrimaryName="{style.floatedRight}"/>
    </gwt:VerticalPanel>
</ui:UiBinder>
